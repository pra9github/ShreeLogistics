  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Arial', sans-serif;
      color: #fff;
      overflow-x: hidden;
    }
    .video-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      z-index: -1000;
    }
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(2px);
      z-index: -999;
    }
    header, footer {
      position: fixed;
      width: 100%;
      left: 0;
      z-index: 1000;
      background-color: rgba(0, 0, 0, 0.5);
    }
    header {
      top: 0;
    }
    footer {
      bottom: 0;
      padding: 10px 0;
    }
    .content {
      padding-top: 100px;
      padding-bottom: 100px;
      position: relative;
      z-index: 1;
    }
    .service-card {
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .service-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
    }
    .service-icon {
      font-size: 3rem;
      color: #fff;
      margin-bottom: 1rem;
    }
    .logo {
      width: 50px;
      height: auto;
      margin-right: 10px;
      display: inline-block;
    }
    .social-icons a {
      color: #fff;
      font-size: 1.5rem;
      margin: 0 10px;
      transition: color 0.3s ease;
    }
    .social-icons a:hover {
      color: #e0e0e0;
    }
    h1, h3, p {
      text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
    }
  </style>
</head>
